            android:name="com.xwh.whatsapi.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.xwh.whatsapi.MainActivity"></activity>
        <activity android:name="com.xwh.whatsapi.GuideActivity"></activity>
        <activity android:name="com.xwh.whatsapi.HellowordsActivity"></activity>
